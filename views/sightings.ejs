<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bird Repository</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <%- include ('partials/navbar.ejs') %>
        <main class="table">
            <section class="table__header">
                <h1>Sightings</h1>
            </section>
            <section class="table__body">
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Bird(s)</th>
                            <th>Location</th>
                            <th>Date</th>
                            <th>Image</th>
                            <th>Count</th>
                            <th>isVerified</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sightings.forEach(sighting => { %>
                            <tr>
                                <td><%= sighting.username %></td>
                                <td><%= sighting.nameCommon %></td>
                                <td><%= sighting.location %></td>
                                <td><%= new Date(sighting.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                                <td><img src="/sightings_img/<%= sighting.sightingimages %>" alt="Sighting Image" style="width: 100px;"></td>
                                <td><%= sighting.birdCount %></td>
                                <td>
                                    <% if (sighting.isVerified === 1) { %>
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                    <% } else { %>
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
