<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bird Repository</title>

    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <section class="section">
        <%- include ('partials/navbar.ejs') %>
        
        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <video class="d-block w-100" src="/vid/vecteezy_crown-pigeon_14001526.mp4" autoplay loop muted></video>
                </div>
                <div class="carousel-item">
                    <video class="d-block w-100" src="/vid/vecteezy_toucan_21548266.mp4" autoplay loop muted></video>
                </div>
            </div>
        </div>
        
        <!-- Overlay content positioned on top of the carousel -->
        <div class="carousel-overlay">
            <div class="container text-center">
                <div class="row">
                    <div class="col">
                        <p>Bird Society of Singapore</p>
                        <h1>Bird Repository</h1>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <form action="/" method="GET">
                            <div class="input-group mb-3">
                                <input type="text" name="search" value="<%= typeofVariable %>" class="form-control"
                                    placeholder="Search for a bird...">
                                <button type="submit" class="btn btn-secondary btn-search">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Birds Listing -->
    <div class="container mt-5">
        <div class="d-flex justify-content-between mb-3">
            <div>
                <p id="resultsCount"><%= birds.length %> results found</p> <!--displays the number of results found-->
            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Sort By
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                    <li><a class="dropdown-item" href="#" onclick="sortBirds('family-asc')">Family (A-Z)</a></li>
                    <li><a class="dropdown-item" href="#" onclick="sortBirds('family-desc')">Family (Z-A)</a></li>
                </ul>
            </div>
        </div>
        <div id="bird-list" class="row">
            <% birds.forEach(bird=> { %>
                <div class="col-md-3">
                    <div class="card mb-4">
                        <div class="aspect-ratio-7-5">
                            <img src="<%= bird.image %>" alt="<%= bird.nameCommon %>">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= bird.nameCommon %>
                            </h5>
                            <p class="card-text">
                                <%= bird.nameScientific %>
                            </p>
                            <a href="/bird/<%= bird.birdID %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- script for sort button -->
    <script>
        function sortBirds(order) {
            const birdList = document.getElementById('bird-list');
            const birds = Array.from(birdList.getElementsByClassName('col-md-3'));

            birds.sort((a, b) => {
                const familyA = a.querySelector('.card-body .card-text').textContent.trim().toUpperCase();
                const familyB = b.querySelector('.card-body .card-text').textContent.trim().toUpperCase();

                if (order === 'family-asc') {
                    return familyA > familyB ? 1 : -1; // Sort by family name A-Z
                } else if (order === 'family-desc') {
                    return familyA < familyB ? 1 : -1;
                }
            });

            birdList.innerHTML = '';
            birds.forEach(bird => birdList.appendChild(bird));
        }
    </script>
</body>
</html>